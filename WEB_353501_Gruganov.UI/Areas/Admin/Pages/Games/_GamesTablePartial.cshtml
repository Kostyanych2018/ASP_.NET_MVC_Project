@model WEB_353501_Gruganov.UI.Areas.Admin.Pages.Games.IndexModel
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Games.Items[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.Items[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.Items[0].GenreId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.Items[0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.Items[0].Image)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Games.Items) {
        <tr style="vertical-align: middle">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.Image" alt="Изображение игры" style="height: 150px; width: 150px"/>
            </td>
            <td>
                <a asp-page="/Games/Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-page="/Games/Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-page="/Games/Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>


<pager current-page="@Model.Games.CurrentPage"
       total-pages="@Model.Games.TotalPages"
       admin="true"></pager>