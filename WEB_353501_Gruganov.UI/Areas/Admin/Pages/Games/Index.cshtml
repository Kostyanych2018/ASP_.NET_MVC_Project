@page
@model WEB_353501_Gruganov.UI.Areas.Admin.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Admin Index";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">Создать</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Games.Items[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.Items[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.Items[0].GenreId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.Items[0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games.Items[0].Image)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Games.Items) {
        <tr style="vertical-align: middle">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.Image" alt="Изображение игры" style="height: 150px; width: 150px"/>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.Games.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-page="./Index"
               asp-route-pageNo="@(Model.Games.CurrentPage - 1)">
                Предыдущая
            </a>
        </li>
        @for (int i = 1; i <= Model.Games.TotalPages; i++) {
            <li class="page-item @(i == Model.Games.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-pageNo="@i">
                    @i
                </a>
            </li>
        }
        <li class="page-item @(Model.Games.CurrentPage == Model.Games.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-page="./Index"
               asp-route-pageNo="@(Model.Games.CurrentPage + 1)">
                Следующая
            </a>
        </li>

    </ul>
</nav>

