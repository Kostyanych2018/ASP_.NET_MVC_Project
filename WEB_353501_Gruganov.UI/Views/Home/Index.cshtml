@* @model TModel *@

@{
    ViewBag.Title = "Index";
}

<h1>@ViewData["Subtitle"]</h1>
<h2>Список</h2>
<ol type="A">
    @for (int i = 0; i < 3; i++) {
        <li>Элемент списка @i</li>
    }
</ol>
<hr/>
<h2>Форма</h2>
<form method="post">

    <div class="row mt-3">
        <div class="col-9 offset-3">
            <select class="form-select" asp-items="@ViewBag.List"></select>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-9 offset-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="checkb    ox1" value="1"/>
                <label class="form-check-label">Чек-бокс 1</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="checkbox2" value="2"/>
                <label class="form-check-label">Чек-бокс 2</label>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-auto offset-3">
            <div class="form-check-inline">
                <input class="form-check-input" type="radio" name="radioGroup" value="1" checked/>
                <label class="form-check-label">Радио 1</label>
            </div>
            <div class="form-check-inline">
                <input class="form-check-input" type="radio" name="radioGroup" value="2"/>
                <label class="form-check-label">Радио 2</label>
            </div>
            <div class="form-check-inline">
                <input class="form-check-input" type="radio" name="radioGroup" value="3"/>
                <label class="form-check-label">Радио 3</label>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <label class="col-3 col-form-label">Логин:</label>
        <div class="col-9">
            <input type="text" class="form-control" name="login" placeholder="Введите имя"/>
        </div>
    </div>
    <div class="row mt-3 mb-3">
        <label class="col-3 col-form-label">Пароль:</label>
        <div class="col-9">
            <input type="password" class="form-control" name="password" placeholder="Введите пароль"/>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Отправить</button>
</form>
  